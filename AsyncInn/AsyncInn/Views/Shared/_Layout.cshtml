<!DOCTYPE html>

@* Bootstrap Nav Bar taken from https://www.w3schools.com/bootstrap4/tryit.asp?filename=trybs_template1 *@

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">Hotels<span class="caret"></span></a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-controller="Hotels" asp-action="Index">View Hotels</a>
                        <a class="dropdown-item" asp-controller="Hotels" asp-action="Index">Find a Hotel</a>
                        <a class="dropdown-item" asp-controller="Hotels" asp-action="Create">Add a new Hotel</a>
                        <a class="dropdown-item" asp-controller="HotelRooms" asp-action="Create">Add a Room to a Hotel</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">Room Layouts<span class="caret"></span></a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-controller="Rooms" asp-action="Index">View Room Layouts</a>
                        <a class="dropdown-item" asp-controller="Rooms" asp-action="Index">Find a Room Layout</a>
                        <a class="dropdown-item" asp-controller="Rooms" asp-action="Create">Add a new Room Layout</a>
                        <a class="dropdown-item" asp-controller="HotelRooms" asp-action="Index">View all Room Assignments</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">Amenities<span class="caret"></span></a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" asp-controller="Amenities" asp-action="Index">View Amenities</a>
                        <a class="dropdown-item" asp-controller="Amenities" asp-action="Create">Add a new Amenity</a>
                        <a class="dropdown-item" asp-controller="RoomAmenities" asp-action="Index">Add Amenities to a Room Layout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    @*<h4>@ViewBag.Heading</h4>*@
    <div>
        @RenderBody()
    </div>
</body>
</html>
