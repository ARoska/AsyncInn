<!DOCTYPE html>

@* Bootstrap Nav Bar taken from https://www.w3schools.com/bootstrap4/tryit.asp?filename=trybs_template1 *@

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <h1>@ViewBag.Heading</h1>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Hotels" asp-action="Index">Hotels</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Rooms" asp-action="Index">Rooms</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Amenities" asp-action="Index">Amenities</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="HotelRooms" asp-action="Index">Hotel Room Assignments</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="RoomAmenities" asp-action="Index">Room Amenity Assignmnents</a></li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
