@model AsyncInn.Models.Room

@{
    ViewData["Title"] = "Details";
    ViewData["Heading"] = "Rooms";
    Layout = "_Layout";
}

<h4>Room Details</h4>
<a asp-action="Delete" asp-route-id="@Model.ID">Delete this Room</a>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Layout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Layout)
        </dd>
        <dt class="col-sm-2">
            Amenities
        </dt>
    </dl>
    <div class="container">
        <table class="table table-condensed">
            <tbody>
                @foreach (var item in Model.RoomAmenities)
                {
                    <tr>
                        <td>@item.Amenities.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
